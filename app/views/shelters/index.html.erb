<div class="d-flex justify-content-center">
  <h1>All Shelters</h1>
</div>

<div class="d-flex justify-content-between">
  <%= link_to "Sort by number of pets", "/shelters?sort=pet_count" %>

  <%= form_with url: shelters_path, method: :get, local: true do |f| %>
    <%= f.label :search %>
    <%= f.text_field :search %>
    <%= f.submit "Search" %>
  <% end %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Created At</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @shelters.each do |shelter| %>
      <tr>
        <td><%= link_to shelter.name, shelter_path(shelter) %></td>
        <td><%= shelter.created_at %></td>
        <td><%= link_to "Edit #{shelter.name}", "/shelters/#{shelter.id}/edit" %></td>
        <td><%= link_to "Delete #{shelter.name}", "/shelters/#{shelter.id}", method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>