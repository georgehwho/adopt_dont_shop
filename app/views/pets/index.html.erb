<div class="d-flex justify-content-center">
  <h1>All pets</h1>
</div>

<div class="d-flex justify-content-center">
  <%= form_with url: "/pets", method: :get, local: true do |f| %>
    <%= f.label :search %>
    <%= f.text_field :search %>
    <%= f.submit "Search" %>
  <% end %>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Breed</th>
      <th scope="col">Adoptable</th>
      <th scope="col">Location</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.age %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.adoptable %></td>
        <td><p>You can find <%= pet.name %> at <%= pet.shelter_name %>!</p></td>
        <td><%= link_to "Edit #{pet.name}", edit_pet_path(pet) %></td>
        <td><%= button_to "Delete #{pet.name}", pet_path(pet), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>