<div class="d-flex justify-content-center">
  <h1>All Shelters</h1>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @shelters.each do |shelter| %>
      <tr id="shelter-<%= shelter.id %>">
        <td><%= link_to shelter.name, shelter_path(shelter) %></td>
        <td><%= shelter.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="d-flex justify-content-center">
  <h1>Shelter's with Pending Applications</h1>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Created At</th>
    </tr>
  </thead>
  <tbody>
    <% @pending.each do |shelter| %>
