<p>Shelter Name: <%= @shelter_info[0].name %></p>
<p>Shelter City: <%= @shelter_info[0].city %></p>
<p>Average pet age: <%= @shelter.pet_average_age %></p>
<p>Adoptable pets: <%= @shelter.adoptable_pet_count %></p>
<p>Adopted pets: <%= @shelter.pets.with_approved_applications %></p>

<br>

<h1>Action Required</h1>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Age</th>
      <th scope="col">Breed</th>
      <th scope="col">Applications</th>
    </tr>
  </thead>
  <tbody>
    <% @shelter.pets.with_pending_applications.each do |pet| %>
      <tr>
        <td><p><%= pet.name %></p></td>
        <td><p><%= pet.age %></p></td>
        <td><p><%= pet.breed %></p></td>
        <td>
          <% pet.applications.pending.each do |app| %>
            <%= link_to app.name, admin_application_path(app) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>